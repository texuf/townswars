{
  "name": "townswars",
  "version": "0.0.1",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc --noEmit",
    "clean": "rm -rf dist",
    "dev": "bun run --watch src/index.ts",
    "lint": "eslint --format unix ./src  --max-warnings=0",
    "lint:fix": "eslint --format unix ./src  --max-warnings=0 --fix",
    "start": "bun run src/index.ts",
    "typecheck": "tsc --noEmit",
    "tick": "bun run src/tick.ts",
    "tick:watch": "while true; do bun run src/tick.ts; sleep 10; done",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:indexes": "bun run scripts/apply-indexes.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f postgres",
    "docker:restart": "docker-compose restart postgres",
    "docker:clean": "docker-compose down -v"
  },
  "dependencies": {
    "@connectrpc/connect-node": "^2.1.0",
    "@towns-protocol/bot": "^0.0.402",
    "@towns-protocol/proto": "^0.0.402",
    "@towns-protocol/web3": "^0.0.402",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.7.11",
    "postgres": "^3.4.7",
    "viem": "^2.29.3"
  },
  "devDependencies": {
    "@types/bun": "^1.3.1",
    "@types/node": "^20.14.8",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "drizzle-kit": "^0.31.6",
    "eslint": "^8.57.1",
    "eslint-import-resolver-typescript": "^4.3.2",
    "eslint-plugin-import-x": "^4.10.2",
    "eslint-plugin-tsdoc": "^0.3.0",
    "typescript": "~5.8.3"
  },
  "files": [
    "/dist"
  ]
}